<%=form_for @movie do |f| %>
<div class="mb-3">
  <label class="form-label">Movie Title</label>
  <%= f.text_field :movie_title, class:"form-control"%>
</div>
<div class="mb-3">
  <label class="form-label">Movie Description</label>
  <%= f.text_field :movie_description, class:"form-control"%>
</div>
<div class="mb-3">
  <label class="form-label">Movie Releas Date</label>
  <%= f.date_field :movie_releas_date, class:"form-control", type: "date"%>
</div>
<div class="mb-3">
  <label for="formFileSm" class="form-label">Movie Thumbnail</label>
  <%= f.file_field :movie_thumbnail, class:"form-control form-control-sm", id:"formFileSm", type:"file"%>
</div>
<div class="mb-3">
  <label for="formFileLg" class="form-label">Movie Clip</label>
  <%= f.file_field :movie_video, class:"form-control form-control-lg", id:"formFileLg", type:"file"%>
</div>

<%= f.submit "Submit", class:"btn btn-primary mb-3"%>
<%end%>